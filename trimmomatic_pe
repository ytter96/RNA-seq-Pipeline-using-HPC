#!/bin/bash
#SBATCH -J Trimmomatic
#SBATCH --partition tres72
#SBATCH -o Trimmomatic_%j.txt
#SBATCH -e Trimmomatic_%j.err
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=32
#SBATCH --time=06:00:00

export OMP_NUM_THREADS=32

module purge
module load java/sunjdk_1.8.0
