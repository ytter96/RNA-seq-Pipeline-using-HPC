/scrfs/storage/ytter/apple_raw_fastq/CODO-26_S18_1P_trim.fastq.gz /scrfs/storage/ytter/apple_raw_fastq/CODO-26_S18_1U_trim.fastq.gz \
/scrfs/storage/ytter/apple_raw_fastq/CODO-26_S18_2P_trim.fastq.gz /scrfs/storage/ytter/apple_raw_fastq/CODO-26_S18_2U_trim.fastq.gz \
ILLUMINACLIP:/share/apps/bioinformatics/trimmomatic/Trimmomatic-0.36/adapters/TruSeq3-PE.fa:2:30:10
